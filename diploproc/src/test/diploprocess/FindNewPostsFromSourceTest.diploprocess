import com.github.diplodoc.diplobase.domain.mongodb.Source

test 'find-new-posts-from-source'

params source: new Source(newPostsFinderModule: 'test.post-finder')

verify {
    assert it.required.size == 1
    assert it.required[0] == 'test.post-finder'

    assert it.output.size == 2

    assert it.output[0].destination == 'load-post'
    assert it.output[0].post.id == '0'

    assert it.output[1].destination == 'load-post'
    assert it.output[1].post.id == '1'
}